@model step_up.Models.Instructors

@{
    ViewData["Title"] = "Детали преподавателя";
    Layout = "~/Views/Shared/_Layout.Admin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Instructors</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="@Model.Photo" alt="@Model.FullName" width="150" height="150" />
            }
            else
            {
                <span>No Photo</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Dance Styles
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DanceStyle)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
