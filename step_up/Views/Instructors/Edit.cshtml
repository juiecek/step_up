@model step_up.Models.Instructors

@{
    ViewData["Title"] = "Редактирование преподавателя";
    Layout = "~/Views/Shared/_Layout.Admin.cshtml";
}

<h1>Редактировать преподавателя</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Текущее фото</label><br />
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@Model.Photo" alt="Фото преподавателя" width="150" class="mb-2" />
                }
            </div>

            <div class="form-group">
                <label>Новое фото (необязательно)</label>
                <input type="file" name="PhotoUpload" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DanceStyleId">Стиль танца</label>
                <select asp-for="DanceStyleId" class="form-control" asp-items="ViewBag.DanceStyles">
                    <option value="">-- Выберите стиль --</option>
                </select>
                <span asp-validation-for="DanceStyleId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Сохранить" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Назад</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
