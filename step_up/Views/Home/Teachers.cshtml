        @foreach (var instructor in Model)
        {
            <div class="teacher">
                <img src="@instructor.Photo" alt="@instructor.FullName" />
                <div class="info">
                    <h2>@instructor.FullName</h2>
                    <p>@instructor.Description</p>
                </div>
            </div>
        }
        @if (User.Identity.IsAuthenticated)
        {
            <section class="add-review">
                <h2>Оставить отзыв</h2>
                <form asp-controller="InstructorReviews" asp-action="CreateFromMainPage" method="post">
                    <label for="instructorId">Преподаватель:</label>
                    <select name="instructorId" required>
                        @foreach (var instructor in Model)
                        {
                            <option value="@instructor.Id">@instructor.FullName</option>
                        }
                    </select>

                    <label for="rating">Оценка (1–5):</label>
                    <input type="number" name="rating" min="1" max="5" required />

                    <label for="comment">Комментарий:</label>
                    <textarea name="comment" rows="3" required></textarea>

                    <button type="submit">Отправить отзыв</button>
                </form>
            </section>

        }
        else
        {
            <p class="login-to-review">
                <em>
                    <a href="/Identity/Account/Login">Войдите</a>, чтобы оставить отзыв.
                </em>
            </p>
        }

        <section class="all-reviews">
            <h2>Отзывы о преподавателях</h2>

            @if (reviews.Any())
            {
                <ul class="reviews-list">
                    @foreach (var review in reviews)
                    {
                        <li>
                            <strong>@review.User.UserName</strong> о <em>@review.Instructor.FullName</em>:
                            <br />
                            <span>Оценка: @review.Rating ★</span>
                            <p>@review.Comment</p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p><em>Пока нет отзывов.</em></p>
            }
        </section>


